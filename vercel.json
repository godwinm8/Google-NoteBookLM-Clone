{
  "version": 2,
  "installCommand": "cd backend && npm ci",
  "buildCommand": "echo \"no build\"",
  "functions": {
    "backend/src/server.js": {
      "runtime": "nodejs22.x",
      "includeFiles": [
        "backend/node_modules/pdfjs-dist/legacy/build/**",
        "backend/node_modules/pdfjs-dist/build/**",
        "backend/node_modules/pdfjs-dist/**"
      ]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/server.js" }
  ]
}
